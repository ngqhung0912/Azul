<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pppp.group14project.controller.GameController" styleClass="background">
    <stylesheets>
        <URL value="@general-styles.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <TextField fx:id="usernameTextField" promptText="Enter your username"/>
    <Button fx:id="addPlayerButton" text="Add player!" onAction="#onAddPlayerButtonClick"/>
    <Button fx:id="startButton" text="Start game!" onAction="#onStartGameButtonClick"/>
</VBox>
